{
    "name": "survey-react-ui",
    "version": "2.0.7",
    "description": "survey.js is a JavaScript Survey Library. It is a modern way to add a survey to your website. It uses JSON for survey metadata and results.",
    "keywords": [
        "Survey",
        "JavaScript",
        "Bootstrap",
        "Library",
        "knockout"
    ],
    "homepage": "https://surveyjs.io/",
    "license": "MIT",
    "files": [
        "**/*"
    ],
    "main": "survey-react-ui.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/surveyjs/surveyjs.git"
    },
    "scripts": {
        "build": "webpack --env buildType=dev --env emitDeclarations --env emitNonSourceFiles && webpack --env buildType=prod && rollup -c",
        "watch:dev": "concurrently \"webpack --env buildType=dev --watch --env emitDeclarations\" \"rollup -c -w\" ",
        "start": "webpack-dev-server --env buildType=dev --open",
        "lint": "eslint . --max-warnings=0",
        "lint:fix": "eslint . --fix",
        "test": "karma start ./karma.conf.js --single-run",
        "test:watch": "karma start ./karma.conf.js",
        "testcafe": "testcafe ../../functionalTests/ --selector-timeout 1500 --app \"http-server --silent\" --env=react --config-file ../../.testcaferc.dev.js",
        "testcafe:ci": "testcafe ../../functionalTests/ --selector-timeout 1500 --app \"http-server --silent\" --reporter minimal --env=react --config-file ../../.testcaferc.js",
        "vrt": "testcafe ../../visualRegressionTests/ --app \"http-server --silent\" --screenshots ../../ --selector-timeout 1500 --env=react --config-file ../../.testcaferc.dev.js",
        "vrt:ci": "testcafe ../../visualRegressionTests/ --app \"http-server --silent\" --screenshots ../../ --selector-timeout 1500 --reporter minimal --env=react --config-file ../../.testcaferc.js",
        "accessibility-tests": "cross-env env=react playwright test --project a11y --ui",
        "accessibility-tests:ci": "cross-env env=react playwright test --project a11y --reporter dot --quiet",
        "e2e": "cross-env env=react playwright test --project e2e --ui",
        "e2e:ci": "cross-env env=react playwright test --project e2e",
        "scr": "cross-env env=react playwright test --project vrt --ui",
        "scr:ci": "cross-env env=react playwright test --project vrt",
        "release": "commit-and-tag-version --message \"Release: %s [azurepipelines skip]\" "
    },
    "typings": "./typings/src/entries/react-ui.d.ts",
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^16.0.0",
        "@rollup/plugin-replace": "^6.0.2",
        "@rollup/plugin-typescript": "^12.1.2",
        "@types/node": "7.0.4",
        "@types/qunit": "2.0.31",
        "@types/react": "^17.0.83",
        "@types/react-dom": "^17.0.1",
        "@types/react-test-renderer": "^17.0.1",
        "@typescript-eslint/eslint-plugin": "^7.2.0",
        "@typescript-eslint/parser": "^7.2.0",
        "commit-and-tag-version": "^11.0.0",
        "concurrently": "^5.3.0",
        "cross-env": "^7.0.3",
        "css-loader": "^7.1.2",
        "eslint": "^8.57.0",
        "eslint-plugin-react": "^7.33.0",
        "html-loader": "^5.0.0",
        "html-webpack-plugin": "^5.6.0",
        "http-server": "^14.1.1",
        "karma": "^6.1.1",
        "karma-chrome-launcher": "^3.1.0",
        "karma-junit-reporter": "2.0.1",
        "karma-qunit": "4.1.2",
        "karma-sourcemap-loader": "0.3.8",
        "karma-webpack": "5.0.0",
        "mini-css-extract-plugin": "^2.9.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-test-renderer": "^17.0.1",
        "rimraf": "2.5.4",
        "rollup": "^4.34.8",
        "rollup-plugin-license": "^3.6.0",
        "sass": "^1.62.1",
        "sass-loader": "^8.0.2",
        "style-loader": "^1.2.1",
        "survey-core": "../survey-core/build",
        "ts-loader": "^8.0.15",
        "tsconfig-paths-webpack-plugin": "^3.3.0",
        "typescript": "^5.7.0",
        "webpack": "5.98.0",
        "webpack-cli": "^5.1.4",
        "webpack-dev-server": "^5.0.4"
    },
    "commit-and-tag-version": {
        "bumpFiles": [
            "package.json"
        ]
    }
}
